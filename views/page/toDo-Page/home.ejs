<%- include("../../includes/head.ejs") %>

<body class="bg-gray-900 min-h-screen flex items-center justify-center relative">
    <!-- Logout Button Positioned at the Top Right -->
    <form action="/user/logout" method="post" class="absolute top-6 right-6">
        <button class="bg-red-500 text-white font-medium py-2 px-4 rounded-lg shadow-md hover:bg-red-600 transform hover:scale-105 transition-all duration-300">
            Logout
        </button>
    </form>

    <!-- Main Container -->
    <div class="bg-gradient-to-b from-gray-800 to-gray-900 p-10 rounded-2xl shadow-xl text-white w-full max-w-lg">
        <!-- Title -->
        <h2 class="text-3xl font-bold mb-6 text-center">Create Todo</h2>
        <h5 class="text-lg mb-6 text-center">Welcome, <span class="text-indigo-400"><%= user.username %></span></h5>

        <!-- Add Todo Form -->
        <form action="/user/createTodo" method="get" class="flex justify-center">
            <button class="bg-green-500 text-white font-medium py-2 px-8 rounded-lg shadow-md hover:bg-green-600 transform hover:scale-105 transition-all duration-300">
                Add Todo
            </button>
        </form>

        <!-- Spacer -->
        <div class="my-6 border-t border-gray-600"></div>

        <!-- Show Tasks Form -->
        <form action="/user/getTodos" class="flex justify-center">
            <button class="bg-blue-500 text-white font-medium py-2 px-8 rounded-lg shadow-md hover:bg-blue-600 transform hover:scale-105 transition-all duration-300">
                Show my Tasks
            </button>
        </form>
    </div>
</body>
</html>
